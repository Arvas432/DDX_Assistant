<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_white"
    tools:context=".ui.RoleChoiceFragment">
    <TextView
        android:id="@+id/login_title"
        app:layout_constraintTag="top_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:textAppearance="@style/title_text_appearance"
        android:text="@string/i_want_to_log_in_as" />
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/top_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        android:layout_marginTop="26dp"
        app:constraint_referenced_tags="top_header"
        app:layout_constraintTop_toBottomOf="@id/login_title"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="0dp"
        android:clickable="false"
        app:layout_constraintTop_toBottomOf="@id/top_barrier"
        app:layout_constraintBottom_toBottomOf="@id/client_button"
        android:src="@drawable/login_screen_drawable"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:background="@null"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@id/top_barrier"
        android:id="@+id/coach_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/client_button"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:background="@null"
        android:id="@+id/client_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/coach_button"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>