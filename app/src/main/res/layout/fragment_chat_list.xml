<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ChatListFragment">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/back_ic"
        android:layout_marginTop="47dp"
        android:layout_marginStart="14dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/category_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chats"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/back_btn"
        android:textAppearance="@style/black_semibold_20"
        android:layout_marginTop="51dp"
        app:layout_constraintEnd_toStartOf="@id/profile_image"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="47dp"
        android:src="@drawable/sample_profile_image"
        android:layout_marginEnd="23dp"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:paddingHorizontal="10dp"
        android:drawableStart="@drawable/search"
        android:fontFamily="@font/raleway_regular"
        android:textSize="15sp"
        android:hint="@string/search"
        android:textColor="@color/main_dark_purple"
        android:textColorHint="@color/text_gray"
        android:drawablePadding="10dp"
        android:background="@drawable/rounded_outline_rectangle"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="20dp"
        android:layout_height="37dp"
        app:layout_constraintTop_toBottomOf="@id/back_btn"
        android:layout_marginTop="24dp"
        android:id="@+id/search_et"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categories_rv"

        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/search_et"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="7"
        tools:listitem="@layout/chat_list_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>