<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_white"
    android:layout_height="match_parent"
    tools:context=".ui.TrainingScheduleFragment">
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/back_ic"
        android:layout_marginTop="47dp"
        android:layout_marginStart="14dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/workouts"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/back_btn"
        android:textAppearance="@style/black_semibold_20"
        android:layout_marginTop="51dp"
        app:layout_constraintEnd_toStartOf="@id/profile_image"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="47dp"
        android:src="@drawable/sample_profile_image"
        android:layout_marginEnd="23dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/date_header_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@id/back_btn"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_purple_rectangle_25">
        <Spinner
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="15dp"
            android:textAppearance="@style/white_medium_20" />
        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintHorizontal_chainStyle="spread"
            android:id="@+id/done_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/date_tv"
            app:layout_constraintEnd_toStartOf="@id/in_progress_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/done"
            android:textAppearance="@style/white_medium_12"
            android:layout_marginBottom="11dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/in_progress_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/done_tv"
            app:layout_constraintEnd_toStartOf="@id/missed_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/in_progress"
            android:textAppearance="@style/white_medium_12"
            android:layout_marginBottom="11dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/missed_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/in_progress_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/skipped"
            android:textAppearance="@style/white_medium_12"
            android:layout_marginBottom="11dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/done_tv"
            android:id="@+id/done_counter_tv"
            tools:text="0"
            android:textAppearance="@style/medium_30"
            android:textColor="@color/main_teal"
            app:layout_constraintStart_toStartOf="@id/done_tv"
            app:layout_constraintEnd_toEndOf="@id/done_tv"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/in_progress_tv"
            android:id="@+id/in_progress_counter_tv"
            tools:text="0"
            android:textAppearance="@style/medium_30"
            android:textColor="@color/main_white"
            app:layout_constraintStart_toStartOf="@id/in_progress_tv"
            app:layout_constraintEnd_toEndOf="@id/in_progress_tv"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/missed_tv"
            android:id="@+id/missed_counter_tv"
            tools:text="0"
            android:textAppearance="@style/medium_30"
            android:textColor="@color/main_orange"
            app:layout_constraintStart_toStartOf="@id/missed_tv"
            app:layout_constraintEnd_toEndOf="@id/missed_tv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/calendar_layout"
        android:orientation="horizontal"
        tools:itemCount="7"
        android:layout_marginTop="7dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginHorizontal="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/calendar_list_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_header_layout" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/training_rv"
        android:layout_width="match_parent"
        tools:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_height="0dp"
        tools:listitem="@layout/workout_list_item"
        app:layout_constraintTop_toBottomOf="@id/calendar_layout"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <RelativeLayout
        android:id="@+id/empty_placeholder_layout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/empty_list_drawable"
            android:scaleType="centerInside"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/add_training_button_small"
            android:layout_width="90dp"
            android:layout_centerHorizontal="true"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="321dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_light_purple_rectangle_25"
            android:src="@drawable/plus" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="165dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:textSize="17sp"
            android:fontFamily="@font/raleway_medium"
            android:textColor="@color/main_dark_purple"
            android:text="@string/add_workout"
            android:gravity="center"
            android:background="@drawable/rounded_dark_rectangle_outline"/>
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/add_training_button"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_light_purple_rectangle_25"
        android:src="@drawable/plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>