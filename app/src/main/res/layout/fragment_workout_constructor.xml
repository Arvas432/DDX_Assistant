<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_white"
    tools:context=".ui.fragments.WorkoutConstructorFragment">
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/back_ic"
        android:layout_marginTop="47dp"
        android:layout_marginStart="14dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/constructor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/back_btn"
        android:textAppearance="@style/black_semibold_20"
        android:layout_marginTop="51dp"
        app:layout_constraintEnd_toStartOf="@id/profile_image"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="47dp"
        android:src="@drawable/sample_profile_image"
        android:layout_marginEnd="23dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/back_btn"
        android:background="@drawable/rounded_purple_rectangle_25"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="20dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="4 Сентября"
            android:textAppearance="@style/white_medium_20"
            android:textSize="18sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="13dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ВТ"
            android:textAppearance="@style/white_medium_20"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAllCaps="true"
            app:layout_constraintBottom_toBottomOf="@id/date_tv"
            android:layout_marginEnd="30dp"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/workout_name_et"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            app:layout_constraintTop_toBottomOf="@id/date_tv"
            android:background="@drawable/rounded_outline_rectangle"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="11dp"
            android:paddingHorizontal="15dp"
            android:hint="@string/workout_name"
            android:fontFamily="@font/raleway_regular"
            android:textSize="13sp"
            android:textColorHint="@color/text_gray"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/add_exercise_button_small"
        android:layout_width="90dp"
        android:layout_centerHorizontal="true"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="17dp"
        android:background="@drawable/rounded_light_purple_rectangle_25"
        android:src="@drawable/plus" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/workout_exercise_list_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintVertical_bias="0.0"
        tools:itemCount="3"
        tools:layout_editor_absoluteX="0dp"
        tools:listitem="@layout/exercise_list_item" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/add_exercise_button"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_light_purple_rectangle_25"
        android:src="@drawable/plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>