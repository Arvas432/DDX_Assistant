<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title_text_appearance">
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/main_dark_purple</item>
    </style>
    <style name="white_semibold_30">
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="white_black_50">
        <item name="fontFamily">@font/raleway_black</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="half_transparent_white_bold_51">
        <item name="fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="white_bold_35">
        <item name="fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="gray_regular_20">
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>
    <style name="white_light_16">
        <item name="fontFamily">@font/raleway_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="purple_medium_17">
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/main_dark_purple</item>
    </style>
    <style name="purple_semibold_17">
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/main_light_purple</item>
    </style>
    <style name="rounded_purple_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_button_bg</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">45dp</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingHorizontal">32dp</item>
        <item name="android:paddingVertical">15dp</item>
    </style>
    <style name="gray_text_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:textAppearance">@style/gray_regular_20</item>
        <item name="android:layout_marginHorizontal">35dp</item>
        <item name="android:background">@drawable/gray_text_field_background</item>
        <item name="maxLines">1</item>
        <item name="singleLine">true</item>
    </style>
</resources>